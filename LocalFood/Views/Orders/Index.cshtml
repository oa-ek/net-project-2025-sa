@model IEnumerable<LocalFood.Models.Order>
@{
    ViewData["Title"] = "Список замовлень";
}
<h2>Список замовлень</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Створити замовлення</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Клієнт</th>
            <th>Телефон</th>
            <th>Адреса</th>
            <th>Дата</th>
            <th>Ресторан</th>
            <th>Статус</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CustomerName</td>
                <td>@order.Phone</td>
                <td>@order.Address</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>@order.Restaurant?.Name</td>
                <td>@order.OrderStatus?.Name</td>
                <td>
                    <a asp-action="Track" asp-route-id="@order.OrderId" class="btn btn-info">Відстежити</a>
                    <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn btn-warning">Редагувати</a>
                </td>
            </tr>
        }
    </tbody>
</table>
