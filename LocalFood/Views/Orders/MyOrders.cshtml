@model IEnumerable<LocalFood.Models.Order>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Мої замовлення";
}

<h1 class="mb-4">Мої замовлення</h1>

<div class="card shadow-sm bg-dark text-light">
    <div class="card-body">
        <table class="table table-dark table-hover w-100">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Дата замовлення</th>
                    <th>Статус</th>
                    <th>Сума</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var o in Model)
                {
                    <tr>
                        <td>@o.OrderId</td>
                        <td>@o.OrderDate.ToString("g")</td>
                        <td>@o.OrderStatus?.Name</td>
                        <td>@o.TotalAmount.ToString("0.00") грн</td>
                        <td>
                            <a asp-action="Track" asp-route-id="@o.OrderId" class="btn btn-sm btn-info">
                                <i class="fa-solid fa-eye me-1"></i> Деталі
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
