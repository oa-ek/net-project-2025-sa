@model LocalFood.Models.Order

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Редагувати замовлення";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2 class="mb-4 fw-bold text-center">
                <i class="fa-solid fa-pen-to-square me-2 text-primary"></i> Редагувати замовлення #@Model.OrderId
            </h2>

            <div class="card shadow-lg border-0 rounded-4 mb-5">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="OrderId" />

                        <div class="mb-4">
                            <label asp-for="CustomerName" class="form-label fw-bold">
                                <i class="fa-solid fa-user me-1"></i> Ім'я клієнта
                            </label>
                            <input asp-for="CustomerName" class="form-control form-control-lg" placeholder="Введіть ім'я" required />
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Phone" class="form-label fw-bold">
                                <i class="fa-solid fa-phone me-1"></i> Телефон
                            </label>
                            <input asp-for="Phone" class="form-control form-control-lg" placeholder="Введіть телефон" required />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Address" class="form-label fw-bold">
                                <i class="fa-solid fa-location-dot me-1"></i> Адреса
                            </label>
                            <input asp-for="Address" class="form-control form-control-lg" placeholder="Введіть адресу" required />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="fa-solid fa-utensils me-1"></i> Ресторан
                            </label>
                            <select asp-for="RestaurantId" asp-items="ViewBag.RestaurantId" class="form-select form-select-lg" required>
                                <option value="">Оберіть ресторан</option>
                            </select>
                        </div>

                        <div class="mb-5">
                            <label class="form-label fw-bold">
                                <i class="fa-solid fa-info-circle me-1"></i> Статус замовлення
                            </label>
                            <select asp-for="StatusId" asp-items="ViewBag.StatusList" class="form-select form-select-lg" required>
                                <option value="">Оберіть статус</option>
                            </select>
                            <span asp-validation-for="StatusId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="fa-solid fa-save me-1"></i> Зберегти
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fa-solid fa-arrow-left me-1"></i> Назад
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>