@model LocalFood.Models.Order

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Редагувати замовлення";
}

<h2 class="mb-4">Редагувати замовлення</h2>

<div class="card shadow-sm mb-5">
    <div class="card-body p-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="OrderId" />

            <div class="mb-3">
                <label asp-for="CustomerName" class="form-label fw-bold">
                    <i class="fa-solid fa-user me-1"></i> Ім'я клієнта
                </label>
                <input asp-for="CustomerName" class="form-control" placeholder="Введіть ім'я" required />
                <span asp-validation-for="CustomerName" class="text-warning"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label fw-bold">
                    <i class="fa-solid fa-phone me-1"></i> Телефон
                </label>
                <input asp-for="Phone" class="form-control" placeholder="Введіть телефон" required />
                <span asp-validation-for="Phone" class="text-warning"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label fw-bold">
                    <i class="fa-solid fa-location-dot me-1"></i> Адреса
                </label>
                <input asp-for="Address" class="form-control" placeholder="Введіть адресу" required />
                <span asp-validation-for="Address" class="text-warning"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">
                    <i class="fa-solid fa-utensils me-1"></i> Ресторан
                </label>
                <select asp-for="RestaurantId" asp-items="ViewBag.RestaurantId" class="form-control" required>
                    <option value="">Оберіть ресторан</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">
                    <i class="fa-solid fa-info-circle me-1"></i> Статус замовлення
                </label>
                <select asp-for="StatusId" asp-items="ViewBag.StatusList" class="form-control" required>
                    <option value="">Оберіть статус</option>
                </select>
                <span asp-validation-for="StatusId" class="text-warning"></span>
            </div>

            <div class="mt-3 d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-save me-1"></i> Зберегти
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left me-1"></i> Назад
                </a>
            </div>
        </form>
    </div>
</div>
