@model LocalFood.Models.Order

@{
    ViewData["Title"] = "Відстеження замовлення";
}

<h2>Відстеження замовлення</h2>

<div>
    <h4>Замовлення №@Model.OrderId</h4>
    <p><strong>Клієнт:</strong> @Model.CustomerName</p>
    <p><strong>Телефон:</strong> @Model.Phone</p>
    <p><strong>Адреса:</strong> @Model.Address</p>
    <p><strong>Дата:</strong> @Model.OrderDate.ToString("g")</p>
    <p><strong>Ресторан:</strong> @Model.Restaurant?.Name</p>
    <p><strong>Статус:</strong> @Model.OrderStatus?.Name</p>
    <p><strong>Загальна сума:</strong> @Model.TotalAmount грн</p>
</div>

<div>
    <h3>Склад замовлення</h3>

    <p>
        <a asp-controller="OrderItems" asp-action="Create" asp-route-orderId="@Model.OrderId" class="btn btn-primary">
            Додати позицію
        </a>
    </p>

    @if (Model.OrderItems != null && Model.OrderItems.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Страва</th>
                    <th>Кількість</th>
                    <th>Ціна</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.Dish?.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price грн</td>
                        <td>
                            <a asp-controller="OrderItems" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                Видалити
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">Страв у цьому замовленні поки що немає.</p>
    }
</div>

<a asp-action="Index" class="btn btn-secondary">Назад</a>
