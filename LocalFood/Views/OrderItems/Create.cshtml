@model LocalFood.Models.OrderItem

@{
    ViewData["Title"] = "Додати страву до замовлення";
}

<h2 class="mb-4">Додати страву до замовлення</h2>

<div class="card shadow-sm mb-5">
    <div class="card-body p-4">
        <form asp-action="Create" method="post">
            <input type="hidden" asp-for="OrderId" />

            <div class="mb-3">
                <label class="form-label fw-bold">Страва</label>
                <select asp-for="DishId" asp-items="ViewBag.DishId" class="form-select" required>
                    <option value="">Оберіть страву</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="Quantity" class="form-label fw-bold">
                    <i class="fa-solid fa-sort-numeric-up me-1"></i> Кількість
                </label>
                <input asp-for="Quantity" class="form-control" placeholder="Введіть кількість" required />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">
                    <i class="fa-solid fa-plus me-1"></i> Додати
                </button>
                <a asp-action="Track" asp-controller="Orders" asp-route-id="@Model.OrderId" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left me-1"></i> Назад
                </a>
            </div>
        </form>
    </div>
</div>
