@model IEnumerable<LocalFood.Models.OrderItem>

@{
    ViewData["Title"] = "Позиції замовлення";
    var orderId = ViewBag.OrderId;
}

<h2 class="mb-4">Позиції замовлення</h2>

<div class="mb-3">
    <a asp-action="Create" asp-route-orderId="@orderId" class="btn btn-primary">
        <i class="fa-solid fa-plus me-1"></i> Додати позицію
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-dark table-hover m-0">
            <thead>
                <tr>
                    <th>Страва</th>
                    <th>Кількість</th>
                    <th>Ціна</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Dish.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price. грн</td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="fa-solid fa-trash me-1"></i> Видалити
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Track" asp-controller="Orders" asp-route-id="@orderId" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left me-1"></i> Назад
    </a>
</div>
