@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Dev - Скидання паролю";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <h2 class="text-center mb-4">
                <i class="fa-solid fa-wrench me-2" style="color:#ffa000;"></i>
                Dev - Скидання паролю
            </h2>
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info">@ViewBag.Message</div>
            }
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="DevResetPassword" method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fa-solid fa-envelope me-1"></i> Email
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa-solid fa-envelope text-primary"></i>
                                </span>
                                <input name="email" class="form-control" placeholder="Введіть email" required />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fa-solid fa-key me-1"></i> Новий пароль
                            </label>
                            <input name="newPassword" type="password" class="form-control" required />
                        </div>
                        <button class="btn btn-danger w-100">
                            <i class="fa-solid fa-unlock-keyhole me-1"></i> Скинути пароль
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
