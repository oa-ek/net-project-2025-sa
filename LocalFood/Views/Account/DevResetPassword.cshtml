@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Dev - Скидання паролю";
}

<div class="auth-container">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="text-center mb-5">
                    <div class="d-inline-block position-relative mb-3">
                        <div style="width: 80px; height: 80px; background: linear-gradient(45deg, var(--warning-color) 0%, #ffb52e 100%); border-radius: 50%; filter: blur(20px); position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);"></div>
                        <i class="fa-solid fa-wrench text-white" style="font-size: 3.5rem; position: relative;"></i>
                    </div>
                    <h1 class="text-white fw-bold" style="font-size: 2.5rem; letter-spacing: -0.5px;">Скидання паролю</h1>
                    <p class="text-white-50">Інструмент для розробників</p>
                </div>

                <div class="auth-card rounded-4 overflow-hidden">
                    <div class="p-5">
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert @(ViewBag.Message.StartsWith("✅") ? "alert-success" : "alert-danger") border-0 shadow-sm mb-4" style="background: @(ViewBag.Message.StartsWith("✅") ? "rgba(22, 163, 74, 0.2)" : "rgba(220, 38, 38, 0.2)"); backdrop-filter: blur(5px); color: white;">
                                <p class="mb-0 fs-5">@ViewBag.Message</p>
                            </div>
                        }
                        <form asp-action="DevResetPassword" method="post">
                            <div class="mb-4">
                                <label class="form-label fw-bold text-white-50 mb-3">
                                    <i class="fa-solid fa-envelope me-1"></i> Email
                                </label>
                                <div class="input-group input-group-lg">
                                    <input name="email" class="form-control form-control-lg py-3" placeholder="Введіть email" required />
                                </div>
                            </div>
                            <div class="mb-5">
                                <label class="form-label fw-bold text-white-50 mb-3">
                                    <i class="fa-solid fa-key me-1"></i> Новий пароль
                                </label>
                                <div class="input-group input-group-lg">
                                    <input name="newPassword" type="password" class="form-control form-control-lg py-3" placeholder="Введіть новий пароль" required />
                                </div>
                            </div>
                            <button class="btn btn-lg w-100 fw-bold py-3 position-relative overflow-hidden" style="background: linear-gradient(45deg, var(--warning-color) 0%, #ffb52e 100%); border: none; border-radius: 12px;">
                                <span class="position-relative z-index-1">
                                    <i class="fa-solid fa-unlock-keyhole me-2"></i> Скинути пароль
                                </span>
                            </button>
                            <div class="text-center mt-4">
                                <a href="/Account/Login" class="text-decoration-none text-white-50 hover-text-white">
                                    <i class="fa-solid fa-arrow-left me-1"></i> Повернутися до входу
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <p class="text-white-50">© 2025 LocalFood. Всі права захищено.</p>
                </div>
            </div>
        </div>
    </div>
</div>