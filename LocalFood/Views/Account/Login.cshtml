@model LocalFood.ViewModels.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Увійти";
}

<div class="auth-container">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="row g-0 shadow-lg rounded-4 overflow-hidden">
                    <!-- Left side - Illustration -->
                    <div class="col-md-5 d-none d-md-block auth-sidebar">
                        <div class="d-flex flex-column justify-content-center align-items-center h-100 p-5 position-relative">
                            <div class="text-center mb-5">
                                <i class="fa-solid fa-utensils text-white" style="font-size: 5rem;"></i>
                            </div>
                            <h2 class="text-white fw-bold mb-4" style="font-size: 2.2rem; letter-spacing: -0.5px;">Система доставки їжі</h2>
                            <p class="text-white-50 mb-0 fs-5">Відкрийте для себе найкращі ресторани та насолоджуйтесь улюбленими стравами</p>
                        </div>
                    </div>

                    <!-- Right side - Login form -->
                    <div class="col-md-7 auth-card">
                        <div class="p-5">
                            <div class="d-flex justify-content-between align-items-center mb-5">
                                <h1 class="text-white fw-bold m-0" style="font-size: 2.5rem; letter-spacing: -0.5px;">Вхід</h1>
                                <div class="d-md-none">
                                    <i class="fa-solid fa-utensils text-white" style="font-size: 2.5rem;"></i>
                                </div>
                            </div>

                            <form asp-action="Login" method="post">
                                @Html.AntiForgeryToken()

                                <div class="mb-4">
                                    <label asp-for="Email" class="form-label fw-bold text-white-50 mb-3">
                                        <i class="fa-solid fa-envelope me-1"></i> Email
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <input asp-for="Email" class="form-control form-control-lg py-3" placeholder="Введіть email" />
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger small mt-2 d-block"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label fw-bold text-white-50 mb-3">
                                        <i class="fa-solid fa-lock me-1"></i> Пароль
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <input asp-for="Password" type="password" class="form-control form-control-lg py-3" placeholder="Введіть пароль" />
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger small mt-2 d-block"></span>
                                </div>

                                <div class="form-check mb-4 mt-4">
                                    <input asp-for="RememberMe" class="form-check-input" style="background-color: rgba(255, 255, 255, 0.1); border-color: rgba(255, 255, 255, 0.2);" />
                                    <label asp-for="RememberMe" class="form-check-label ms-2 text-white-50"></label>
                                </div>

                                <button type="submit" class="btn btn-lg w-100 fw-bold py-3 position-relative overflow-hidden mb-4" style="background: linear-gradient(45deg, var(--primary-color) 0%, var(--primary-dark) 100%); border: none; border-radius: 12px;">
                                    <span class="position-relative z-index-1">
                                        <i class="fa-solid fa-arrow-right-to-bracket me-2"></i> Увійти
                                    </span>
                                </button>

                                <div class="d-flex justify-content-between mb-4">
                                    <a asp-action="Register" class="text-decoration-none text-white-50 hover-text-white">
                                        <i class="fa-solid fa-user-plus me-1"></i> Зареєструватись
                                    </a>
                                    <a asp-action="DevResetPassword" class="text-decoration-none text-white-50 hover-text-white">
                                        <i class="fa-solid fa-unlock-keyhole me-1"></i> Забули пароль?
                                    </a>
                                </div>

                                <div class="position-relative my-4">
                                    <hr style="border-color: rgba(255, 255, 255, 0.1);">
                                    <div class="position-absolute top-50 start-50 translate-middle px-3" style="background: rgba(26, 26, 46, 0.8);">
                                        <span class="text-white-50">або</span>
                                    </div>
                                </div>

                                <a class="btn btn-lg w-100 fw-bold py-3 position-relative overflow-hidden"
                                   asp-controller="Account"
                                   asp-action="ExternalLogin"
                                   asp-route-provider="Google"
                                   style="background: linear-gradient(45deg, #ea4335 0%, #c5221f 100%); border: none; border-radius: 12px;">
                                    <span class="position-relative z-index-1">
                                        <i class="fa-brands fa-google me-2"></i> Увійти через Google
                                    </span>
                                </a>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <p class="text-white-50">© 2025 LocalFood. Всі права захищено.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}