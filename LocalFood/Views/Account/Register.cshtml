@model LocalFood.ViewModels.RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Реєстрація";
}

<div class="container my-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">
                        <i class="fa-solid fa-user-plus me-2"></i> Реєстрація
                    </h2>
                    <form asp-action="Register" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">
                                <i class="fa-solid fa-envelope me-1"></i> Email
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa-solid fa-envelope text-primary"></i>
                                </span>
                                <input asp-for="Email" class="form-control" placeholder="Введіть email" />
                            </div>
                            <span asp-validation-for="Email" class="text-warning"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold">
                                <i class="fa-solid fa-key me-1"></i> Пароль
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa-solid fa-key text-primary"></i>
                                </span>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Введіть пароль" />
                            </div>
                            <span asp-validation-for="Password" class="text-warning"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold">
                                <i class="fa-solid fa-key me-1"></i> Підтвердження паролю
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa-solid fa-key text-primary"></i>
                                </span>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Підтвердіть пароль" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            <i class="fa-solid fa-circle-check me-1"></i> Зареєструватися
                        </button>

                        <div class="mt-3 text-center">
                            <a asp-action="Login">
                                <i class="fa-solid fa-arrow-right-to-bracket me-1"></i> Вже маєте акаунт? Увійти
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}