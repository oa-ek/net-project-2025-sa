@model LocalFood.ViewModels.RestaurantEditViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Редагувати ресторан";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2 class="mb-4 fw-bold text-center">
                <i class="fa-solid fa-pen-to-square me-2 text-primary"></i> Редагувати ресторан
            </h2>

            <div class="card shadow-lg border-0 rounded-4 mb-5">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        @* ID приховано *@
                        <input type="hidden" asp-for="RestaurantId" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold">
                                <i class="fa-solid fa-signature me-1"></i> Назва ресторану
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">
                                    <i class="fa-solid fa-signature text-primary"></i>
                                </span>
                                <input asp-for="Name" class="form-control" placeholder="Назва ресторану" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Address" class="form-label fw-bold">
                                <i class="fa-solid fa-location-dot me-1"></i> Адреса
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">
                                    <i class="fa-solid fa-location-dot text-primary"></i>
                                </span>
                                <input asp-for="Address" class="form-control" placeholder="Адреса" />
                            </div>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="fa-solid fa-comment me-1"></i> Опис
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Опис ресторану, особливості кухні, години роботи тощо"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UploadImage" class="form-label fw-bold">
                                <i class="fa-solid fa-image me-1"></i> Оновити фото ресторану (необов'язково)
                            </label>
                            <input asp-for="UploadImage" type="file" class="form-control form-control-lg" />
                            <small class="text-muted">Рекомендований розмір: 1200x600 пікселів. Максимальний розмір: 5MB.</small>
                            <span asp-validation-for="UploadImage" class="text-danger"></span>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <div class="mb-5">
                                <label class="form-label fw-bold">Поточне фото:</label>
                                <div class="text-center">
                                    <img src="@Model.ImagePath" alt="Фото ресторану" class="img-thumbnail" style="max-height: 300px; object-fit: cover;" />
                                </div>
                            </div>
                        }

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg py-3">
                                <i class="fa-solid fa-save me-2"></i> Зберегти зміни
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fa-solid fa-arrow-left me-1"></i> Повернутися до списку
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
