@model LocalFood.Models.Restaurant

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Редагувати ресторан";
}

<h2 class="mb-4">
    <i class="fa-solid fa-pen-to-square me-2"></i> Редагувати ресторан
</h2>

<div class="card shadow-sm">
    <div class="card-body p-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="RestaurantId" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-signature text-primary"></i>
                    </span>
                    <input asp-for="Name" class="form-control" placeholder="Назва ресторану" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label fw-bold"></label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-location-dot text-primary"></i>
                    </span>
                    <input asp-for="Address" class="form-control" placeholder="Адреса" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">
                    <i class="fa-solid fa-image me-1"></i> Оновити фото ресторану (необов’язково)
                </label>
                <input type="file" name="UploadImage" class="form-control" />
            </div>

            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="mb-3 text-center">
                    <label class="form-label fw-bold">Поточне фото:</label><br />
                    <img src="@Model.ImagePath" alt="Фото ресторану" width="200"
                         class="img-thumbnail mb-2" />
                </div>
            }

            <button type="submit" class="btn btn-primary w-100">
                <i class="fa-solid fa-save me-1"></i> Зберегти
            </button>
        </form>
    </div>
</div>
