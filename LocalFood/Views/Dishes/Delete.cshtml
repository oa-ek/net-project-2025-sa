@model LocalFood.Models.Dish

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Видалити страву";
}

<div class="card shadow-sm my-5">
    <div class="card-body text-center p-5">
        <h2 class="mb-4">
            <i class="fa-solid fa-trash me-2"></i> Видалити страву
        </h2>
        <p class="mb-4" style="color: #ffcb9a;">
            Ви дійсно хочете видалити страву "<strong>@Model.Name</strong>"?
        </p>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="DishId" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="fa-solid fa-check me-1"></i> Так, видалити
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left me-1"></i> Ні, повернутися
            </a>
        </form>
    </div>
</div>
