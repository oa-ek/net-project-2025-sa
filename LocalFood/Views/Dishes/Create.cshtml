@model LocalFood.Models.Dish
@{
    ViewData["Title"] = "Додати страву";
}
<h2>Додати страву</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" required />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Ресторан</label>
        <select name="RestaurantId" class="form-control" required>
            <option value="">Оберіть ресторан</option>
            @foreach (var item in (SelectList)ViewBag.RestaurantId)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-success">Додати</button>
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </div>
</form>
