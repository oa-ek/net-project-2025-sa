@model ErrorViewModel
@{
    ViewData["Title"] = "Помилка";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4 my-5">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <div class="position-relative d-inline-block">
                            <div style="width: 120px; height: 120px; background: linear-gradient(45deg, var(--danger-color) 0%, #e02e56 100%); border-radius: 50%; filter: blur(30px); position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);"></div>
                            <i class="fa-solid fa-triangle-exclamation text-danger" style="font-size: 5rem; position: relative;"></i>
                        </div>
                    </div>

                    <h1 class="display-4 fw-bold mb-3">Помилка</h1>

                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted mb-4">
                            <strong>ID запиту:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <div class="alert alert-danger mb-4">
                        <p class="mb-0">Виникла помилка при обробці вашого запиту. Будь ласка, спробуйте пізніше або зверніться до адміністратора.</p>
                    </div>

                    <a href="/" class="btn btn-primary btn-lg px-5 py-3">
                        <i class="fa-solid fa-home me-2"></i> На головну
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>